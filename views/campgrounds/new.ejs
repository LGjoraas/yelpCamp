<% include ../partials/header %>

<div class="container">
    
    <div class="row">

        <h1 style="text-align: center">Create a New Campground</h1>
            <div style="width: 40%; margin: 40px auto;">
     
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"> <!--name assignments grab the data-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
                <p></p>
                <a href="/campgrounds">Go Back to Campgrounds</a>
                <p></p>
                <a href="/">Go back to Home</a>
                
            </div> <!--div style-->
    
    </div> <!--row-->
</div> <!--container-->
